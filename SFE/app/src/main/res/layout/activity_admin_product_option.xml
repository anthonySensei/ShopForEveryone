<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminProductOptionActivity"
    android:background="@drawable/show_products_page">
    <TextView
        android:id="@+id/choose_option_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose option"
        android:gravity="center"
        android:textSize="25dp"
        android:padding="10dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"/>


    <Button
        android:id="@+id/choose_see_all_products_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_option_tv"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="All products"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/choose_product_categories_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_see_all_products_btn"
        android:layout_margin="15dp"
        android:text="product categories"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/choose_back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_product_categories_btn"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:text="Back"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"/>





</RelativeLayout>